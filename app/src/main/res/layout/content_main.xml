<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.farshadmomtaz.lasttext.MainActivity">

    <TextView
        android:id="@+id/disableAutoMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_main_disable_automessage"
        android:visibility="gone"
        android:textAlignment="center"
        android:padding="15dp"
        android:background="#FFE0B2" />

    <TextView
        android:id="@+id/noContactsText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/activity_main_text_no_messages"
        android:visibility="gone"
        android:textAlignment="center"
        android:gravity="center"
        android:padding="15dp"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/contact_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp" />

</LinearLayout>
